{
    "compileOnSave": true,
    "compilerOptions": {
        "alwaysStrict": true,
        "lib": ["ES2015"],
        "module": "commonjs",
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "skipLibCheck": true,
        "strict": true,
        "strictNullChecks": true,
        "target": "es5"
    }
}